<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:padding="8dp"
        tools:context="cmov.feup.eshop.OrderPayment">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_above="@+id/buttonGroup1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total price:"
                android:layout_gravity="center"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/orderPriceTotalTxt"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="26sp"
                android:text="41.93 â‚¬"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:id="@+id/buttonGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">
            <Button
                android:layout_gravity="bottom"
                android:id="@+id/button_delete_order"
                android:onClick="OnCancelButtonClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textColor="#fff"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <Button
                android:layout_gravity="bottom"
                android:id="@+id/button_edit_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:onClick="OnPayButtonClick"
                android:text="PAY"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/button_delete_order"
                android:backgroundTint="@color/actionButtonColor"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
</LinearLayout>
