<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:focusableInTouchMode="true"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="cmov.feup.eshop.RegistrationActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/topLay"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="102dp"
                    android:layout_height="103dp"
                    android:background="@drawable/logo"
                    android:transitionName="logo"
                    android:layout_weight="0.12" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="2dp"
                    android:minHeight="80dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:background="#fff">
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:padding="1dp"
                        android:fontFamily="sans-serif-light"
                        android:text="CREATE"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COMPNAME"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:padding="1dp"
                        android:fontFamily="sans-serif-light"
                        android:text="ACCOUNT"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="btn"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/topLay">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/regFieldsLay"
                android:layout_margin="8dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="4dp"
                            android:layout_margin="16dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/nameTxt"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Surname"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/surnameTxt"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/addressTxt"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fiscal number"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/fiscalNumberTxt"
                                    android:inputType="number"
                                    android:maxLength="9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Username (validation)"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/usernameTxt"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Password"
                                    android:textStyle="italic|bold"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/passwordTxt"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearViewCreditCard"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="4dp"
                                android:background="@color/colorPrimaryDark"></RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="16dp"
                                android:text="Click below to add your credit card details"
                                android:textStyle="italic"
                                android:textSize="12sp"
                                android:textColor="@color/colorPrimaryDark"/>
                            <com.cooltechworks.creditcarddesign.CreditCardView
                                android:id="@+id/card_5"
                                android:onClick="OnCreditCardClick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:card_number="xxxxxxxxxxxxxxxx"
                                app:card_holder_name="NAME SURNAME"
                                app:cvv="522"
                                app:card_expiration="01/17"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="4dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="4dp"
                            android:background="@color/colorPrimaryDark"></RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Fields below are not required"
                            android:textStyle="italic"
                            android:paddingBottom="6dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You can change them later in your profile settings"
                            android:textStyle="italic"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryDark"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="4dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="16dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginTop="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textStyle="italic"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/emailTxt"
                                    android:inputType="textWebEmailAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="City"
                                    android:textStyle="italic"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/cityTxt"
                                    android:inputType="text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone number"
                                    android:textStyle="italic"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <EditText
                                    android:id="@+id/phoneNumberTxt"
                                    android:inputType="phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gender"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginTop="8dp"
                                    android:textStyle="italic"
                                    android:textColor="@color/colorPrimary"
                                    />
                                <RadioGroup
                                    android:id="@+id/radio_group_gender"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="8dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:onClick="OnMaleRadioButtonClick"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Male"/>
                                    <RadioButton
                                        android:onClick="OnFemaleRadioButtonClick"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:text="Female"/>
                                </RadioGroup>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="3dp"
                                    android:background="#82000000">
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Finish your registarion"/>
                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/registerBtn"
                                    android:onClick="OnRegisterClick"
                                    app:fabSize="normal"
                                    android:layout_margin="8dp"
                                    android:layout_width="wrap_content"
                                    app:backgroundTint="@color/upvoteBtnColor"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_check_white_24dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>


            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>
